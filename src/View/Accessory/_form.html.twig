{% if errors is not empty %}             
    <ul class ="error alert text-danger container text-center mb-5 col-lg-9 col-md-9 col-12">
        {% for error in errors %} 
            <li class="list-unstyled">{{ error }}</li>
        {% endfor %}
    </ul>
{% endif %} 
<form method="post">
    <div class="form-group">
        <label for="name">Accessory name</label>
        <input type="text" name="name" id="name">
    </div>
    <div class="form-group">
        <label for="url">Accessory image URL</label>
        <input type="url" name="url" id="url">
    </div>
    <div class="form-btn">
        <button class="btn primary-btn">Create this accessory</button>
    </div>
</form>
